<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <typeAliases>
        <!-- 别名的方式： type=UserBean的路径 alias=设置别名的名称
             别名的命名 最好是首字母大写： 别名不区别首字母大小写
        -->
        <!-- 开启扫描包的方式开启别名 在此包中的所有pojo自动开启别名 -->
        <package name="com.ssm.pojo"/>
    </typeAliases>
    <!-- mappers配置 -->
    <!-- <mappers>
        mybatis+spring结合后，以spring实现mappers扫描
        必须遵守mapper.xml与mapper.java文件都同一个包下且同名。
    </mappers> -->
</configuration>